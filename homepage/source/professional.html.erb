<div class="container">
  <div class='row'>

    <div class="timeline-container">
      <div id="timeline">

        <% data.projects.each_with_index do |project, index| %>
          <div class="timeline-item">
            <div class="timeline-icon">
              <%= partial(:star_svg) %>
            </div>
            <div class="timeline-content <%= 'flipped' if index.even? %>">
              <h2><%= project.title %></h2>
              <p>
                <% if project.description %> 
                  <%= render_markdown(project.description) %>   
                <% end %> 
              </p>
            </div>
            <div class="timeline-opposite <%= 'flipped' if index.even? %>">
              <h3><%= project.season %> of <%= project.year %></h3>
              <h4><%= project.client %></h4>

                <% if project.image %> 
                  <img class="event-image" src="/images/portfolio/<%= project.image %> ">
                <% end %> 

                <% if project.technologies %> 
                  <div class="tokens">
                    <% project.technologies.each do |technology| %> 
                      <span class="token"><%= technology %> </span>
                    <% end %> 
                  </div>
                <% end %> 

            </div>
          </div>
        <% end  %>  

      </div>
    </div> 

  </div>
</div>

